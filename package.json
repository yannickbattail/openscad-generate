{
  "name": "openscad-generate",
  "description": "Generate 3D models, animations and images from OpenSCAD files",
  "version": "1.3.4",
  "author": "XcinnaY",
  "maintainer": "XcinnaY",
  "license": "LGPL-3.0-or-later",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": "./dist/src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/yannickbattail/openscad-generate"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "clean": "rm -Rf ./*.js ./*/*.js coverage dist || true",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run --coverage ./tests/",
    "lint": "eslint --fix src tests",
    "format": "prettier --log-level error --write . --ignore-path ./.gitignore",
    "depcheck": "depcheck --quiet --ignore-path=./.gitignore --ignores='@types/*,@vitest/coverage-v8'",
    "check": "npm run depcheck && npm run build && npm run lint && npm run format && npm run test",
    "check-updates": "npm-check-updates -u && npm i && npm dedupe && npm run check",
    "publish-new-v": "npm version patch --no-git-tag-version && npm run check && npm publish"
  },
  "dependencies": {
    "@types/adm-zip": "^0.5.7",
    "adm-zip": "^0.5.16",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "fast-xml-parser": "^5.3.0",
    "js-yaml": "^4.1.0",
    "openscad-cli-wrapper": "^1.4.8",
    "p-limit": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/commander": "^2.12.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "^4.0.10",
    "depcheck": "^1.4.7",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "npm-check-updates": "^19.1.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  }
}
