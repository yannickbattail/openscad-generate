{
  "name": "openscad-generate",
  "description": "Generate 3D models, animations and images from OpenSCAD files",
  "version": "1.2.1",
  "author": "XcinnaY",
  "maintainer": "XcinnaY",
  "license": "LGPL-3.0-or-later",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": "./dist/src/index.js",
  "scripts": {
    "clean": "rm rm -Rf ./*.js ./*/*.js coverage dist || true",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run --coverage ./tests/",
    "lint": "eslint --fix src tests",
    "format": "prettier --log-level error --write . --ignore-path ./.gitignore",
    "depcheck": "npx depcheck@latest --quiet --ignore-path=./.gitignore --ignores='@types/*,@vitest/coverage-v8'",
    "check": "npm run depcheck && npm run build && npm run lint && npm run format && npm run test",
    "check-updates": "npx npm-check-updates -u && npm i && npm dedupe && npm run check",
    "publish-new-v": "npm version patch --no-git-tag-version && npm run check && npm publish"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "js-yaml": "^4.1.0",
    "openscad-cli-wrapper": "^1.4.5",
    "p-limit": "^7.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/commander": "^2.12.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "depcheck": "^1.4.7",
    "eslint": "^9.33.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  }
}
